<?xml version="1.0" ?>
<ruleset name="Hosts Helper" namespace="Prospress\Hosts">
    <description>PHPCS coding standard for the Hosts Helper codebase.</description>

    <!-- We use the PSR-2 standard. -->
    <rule ref="PSR2" />

    <!-- Custom arguments when running the sniffer -->
    <arg name="colors"/>
    <arg value="sp" />

    <!-- Only include files in the src/ directory -->
    <file>./src</file>
</ruleset>
